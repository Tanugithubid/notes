<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="style.css">
    <title>Document</title>
</head>
<body>
   <div class="main w-full min-h-screen bg-zinc-900">
   <div class="form">
    <form action="/create" method="post">
        <input class="text" type="text" placeholder="title goes here" name="filename">
        <textarea class="textarea" placeholder="write your task detil here" name="filedata"></textarea>
        <input  class="submit" type="submit" value="create task">
    </form>
   </div>
   <div class="task" >
    <% if(files.length>0){ %>
        <% files.forEach(function(val){ %>
            <div class="task1" >
                <h1 class="write"><%= val %></h1>
                <br>
                <div class="flex w-full justify-between items-centre p-2">
               <a class="read" href="/file/<%= val %>">read more</a> 
               <a class="text-zinc-600" href="/edit/<%= val %>">edit</a>
            </div>
        </div>
       <% })%>
    <% } else { %>
        <h3 class="orCase">no tasks yet.</h3>
   <% } %>
   

   </div>
  
</div>
</body>
</html>